<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blueText</item>
        <item name="colorPrimaryDark">@color/blue1</item>
        <item name="colorAccent">@color/blue2</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- updated theme -->

    <style name="MainNavigationBarStyle">
        <item name="android:background">@color/blue1</item>
        <item name="tabIndicatorColor">@color/blueText</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextColor">@color/white1</item>
    </style>

    <style name="MCAnswerStyle">
        <item name="android:textColor">@drawable/grey_to_white_text_state</item>
        <item name="android:drawableRight">@drawable/question_state_circles</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:padding">18dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@drawable/grey_to_blue_mc_answer</item>
        <item name="android:button">@null</item>
    </style>

    <style name="TaskRubricItemStyle">
        <item name="android:textColor">@drawable/black_to_white_text_state</item>
        <item name="android:drawableRight">@drawable/question_state_circles</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:padding">18dp</item>
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@drawable/grey_to_blue_state_boxes</item>
        <item name="android:button">@null</item>
    </style>

    <style name="TaskBlockTitleText">
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">10pt</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/blueText</item>
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:textSize">15pt</item>
    </style>

    <style name="TaskBlockImageStyle">
        <item name="android:paddingLeft">15pt</item>
        <item name="android:paddingRight">15pt</item>
        <item name="android:layout_marginLeft">150dp</item>
        <item name="android:layout_marginRight">150dp</item>
    </style>

    <style name="TaskBlockQuizStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="TaskBlockTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingBottom">10pt</item>
        <item name="android:paddingLeft">10pt</item>
        <item name="android:paddingRight">10pt</item>
        <item name="android:layout_marginLeft">150dp</item>
        <item name="android:layout_marginRight">150dp</item>
    </style>

    <style name="TaskBlockVideoStyle">
        <item name="autoPlay">false</item>
        <item name="showFullScreenButton">true</item>
        <item name="android:paddingLeft">15pt</item>
        <item name="android:paddingRight">15pt</item>
        <item name="android:paddingBottom">10pt</item>
        <item name="android:layout_marginLeft">150dp</item>
        <item name="android:layout_marginRight">150dp</item>
    </style>

    <style name="TitleStyle">
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/blueText</item>
    </style>

    <style name="BoldTitleStyle">
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/blueText</item>
    </style>

    <style name="SmallerHeaderStyle">
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blueText</item>
    </style>

    <style name="ColumnTitleStyle">
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray3</item>
    </style>

    <style name="Heading2Style">
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MasteryTextStyle">
        <item name="android:fontFamily">@font/font_montserrat</item>
        <item name="android:textFontWeight">800</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:translationY">-3.03sp</item>
    </style>

    <style name="CardHeaderStyle">
        <item name="android:fontFamily">@font/font_montserrat</item>
        <item name="android:textFontWeight">800</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:translationY">-1.2sp</item>
    </style>

    <style name="MissionsListTitleStyle">
        <item name="android:text">@string/all_missions</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MissionTaskTitleStyle">
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MissionTaskPercentStyle">
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ResultsContinueBtn">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:radius">3dp</item>
    </style>

    <style name="ResultsReviewBtn">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:radius">3dp</item>
    </style>

    <style name="GoalTitleStyle">
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/almost_black</item>
    </style>

    <style name="TitleGoalEditStyle">
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blueMenu</item>
        <item name="android:layout_marginTop">55dp</item>
        <item name="android:layout_marginEnd">98dp</item>
    </style>

    <style name="GoalEditLineStyle">
        <item name="android:background">@color/grayDivider</item>
    </style>

    <style name="GoalEditButtonSaveStyle">
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textFontWeight">800</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="GoalImageHideStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#00000000</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="GoalDateButtonStyle">
        <item name="android:textColor">@color/grayDivider</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:background">#00000000</item>
        <item name="android:layout_marginStart">25dp</item>
    </style>

    <style name="GoalDateTextStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:layout_marginStart">25dp</item>
    </style>


    <style name="GoalDateAddTitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:inputType">text</item>
    </style>


    <style name="MissionTitle">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#F2C94C</item>
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="MissionDescription">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="MissionTaskTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blueText</item>
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="MissionTaskPoints">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:fontWeight">500</item>
    </style>



</resources>
