<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blueText</item>
        <item name="colorPrimaryDark">@color/blue1</item>
        <item name="colorAccent">@color/blue2</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- updated theme -->

    <style name="MainNavigationBarStyle">
        <item name="android:background">@color/blue1</item>
        <item name="tabIndicatorColor">@color/blueText</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextColor">@color/white</item>
    </style>

    <style name="TitleStyle">
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/blueText</item>
    </style>

    <style name="BoldTitleStyle">
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/blueText</item>
    </style>

    <style name="SmallerHeaderStyle">
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blueText</item>
    </style>

    <style name="ColumnTitleStyle">
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray3</item>
    </style>

    <style name="Heading2Style">
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MasteryTextStyle">
        <item name="android:fontFamily">@font/font_montserrat</item>
        <item name="android:textFontWeight">800</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:translationY">-3.03sp</item>
    </style>

    <style name="CardHeaderStyle">
        <item name="android:fontFamily">@font/font_montserrat</item>
        <item name="android:textFontWeight">800</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:translationY">-1.2sp</item>
    </style>

    <style name="MissionTaskListStyle">
        <item name="paddingEnd">10dp</item>
        <item name="android:layout_marginTop">110dp</item>
    </style>

    <style name="MissionsListTitleStyle">
        <item name="paddingStart">55dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:text">@string/all_missions</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="MissionTaskTitleStyle">
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_marginStart">80dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MissionTaskPercentStyle">
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="GoalTitleStyle">
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/almost_black</item>
    </style>

    <style name="TitleGoalEditStyle">
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:textFontWeight">700</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blueMenu</item>
        <item name="android:layout_marginTop">55dp</item>
        <item name="android:layout_marginEnd">98dp</item>
    </style>

    <style name="GoalEditLineStyle">
        <item name="android:background">@color/grayDivider</item>
    </style>

    <style name="GoalEditButtonSaveStyle">
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textFontWeight">800</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="GoalImageHideStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#00000000</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="GoalDateButtonStyle">
        <item name="android:textColor">@color/grayDivider</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:background">#00000000</item>
        <item name="android:layout_marginStart">25dp</item>
    </style>

    <style name="GoalDateTextStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:layout_marginStart">25dp</item>
    </style>


    <style name="GoalDateAddTitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/font_poppins</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:inputType">text</item>
    </style>

</resources>
