<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <item
        app:state_not_mastered="true"
        app:state_nearly_mastered="false"
        app:state_mastered="false">
        <aapt:attr name="android:drawable">
            <shape android:shape="oval">
                <solid
                    android:color="@color/notMastered"/>
                <size
                    android:width="24dp"
                    android:height="24dp"/>
            </shape>
        </aapt:attr>
    </item>
    <item
        app:state_not_mastered="false"
        app:state_nearly_mastered="true"
        app:state_mastered="false">
        <aapt:attr name="android:drawable">
            <shape android:shape="oval">
                <solid
                    android:color="@color/nearlyMastered"/>
                <size
                    android:width="24dp"
                    android:height="24dp"/>
            </shape>
        </aapt:attr>
    </item>
    <item
        app:state_not_mastered="false"
        app:state_nearly_mastered="false"
        app:state_mastered="true">
        <aapt:attr name="android:drawable">
            <shape android:shape="oval">
                <solid
                    android:color="@color/mastered"/>
                <size
                    android:width="24dp"
                    android:height="24dp"/>
            </shape>
        </aapt:attr>
    </item>
    <item>
        <aapt:attr name="android:drawable">
            <shape android:shape="oval">
                <solid
                    android:color="@color/gray4"/>
                <size
                    android:width="24dp"
                    android:height="24dp"/>
            </shape>
        </aapt:attr>
    </item>
</selector>