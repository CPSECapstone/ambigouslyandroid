<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="235dp"

    android:layout_marginTop="25dp"

    android:background="@null">

    <View
        android:id="@+id/mission_title_item_background"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginVertical="15dp"

        android:layout_marginStart="125dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:background="@drawable/one_side_rounded"
        android:backgroundTint="@color/blueText"
        />

    <ImageView
        android:id="@+id/mission_title_item_rocket_ship"
        android:layout_width="235dp"
        android:layout_height="235dp"

        android:src="@drawable/rocket_ship"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/mission_title_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        style="@style/MissionTitle"

        android:layout_marginTop="16dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="16dp"

        app:layout_constraintStart_toEndOf="@id/mission_title_item_rocket_ship"
        app:layout_constraintEnd_toEndOf="@id/mission_title_item_background"
        app:layout_constraintTop_toTopOf="@id/mission_title_item_background"

        tools:text="Mission #1 â€“ The Plant Life Cycle"
        />

    <TextView
        android:id="@+id/mission_title_item_description"
        android:layout_width="0dp"
        android:layout_height="0dp"

        style="@style/MissionDescription"

        android:layout_marginTop="0dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="16dp"

        app:layout_constraintStart_toEndOf="@id/mission_title_item_rocket_ship"
        app:layout_constraintEnd_toEndOf="@id/mission_title_item_background"
        app:layout_constraintTop_toBottomOf="@id/mission_title_item_title"
        app:layout_constraintBottom_toBottomOf="@id/mission_title_item_background"

        tools:text="Learn about plants and life in this chapter and explore the natural world"

        />

</androidx.constraintlayout.widget.ConstraintLayout>