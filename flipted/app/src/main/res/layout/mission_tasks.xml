<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/learning_target_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Mission #1 - The Plant Life Cycle"
        android:fontFamily="@font/font_poppins"
        android:textSize="36sp"
        android:textColor="@color/blueText"
        />

    <TextView
        android:id="@+id/learning_target_item_col_title_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/learning_target_item_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/learning_target_item_col_title_2"
        app:layout_constraintHorizontal_weight="2"
        android:text="@string/mission_task_item_column_text_1"
        android:fontFamily="@font/font_poppins"
        android:textSize="18sp"
        android:textColor="@color/gray2"
        />

    <TextView
        android:id="@+id/learning_target_item_col_title_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/learning_target_item_title"
        app:layout_constraintStart_toEndOf="@id/learning_target_item_col_title_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="4"
        android:text="@string/mission_task_item_column_text_2"
        android:fontFamily="@font/font_poppins"
        android:textSize="18sp"
        android:textColor="@color/gray2"
        />

    <View
        android:id="@+id/learning_target_item_row_divisor_1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/learning_target_item_col_title_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/gray2"
        />

    <LinearLayout
        android:id="@+id/learning_target_item_objective_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/learning_target_item_row_divisor_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="10dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>