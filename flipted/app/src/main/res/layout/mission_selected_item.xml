<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <View
        android:id="@+id/mission_selected_item_background"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="117.5dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:background="@drawable/mission_item_selected_background"
        />

    <TextView
        android:id="@+id/mission_selected_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        style="@style/MissionTaskTitle"

        android:layout_marginStart="115dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="12dp"

        app:layout_constraintStart_toStartOf="@id/mission_selected_item_background"
        app:layout_constraintTop_toTopOf="@id/mission_selected_item_background"

        tools:text="Task 1.1.4"
        />

    <TextView
        android:id="@+id/mission_selected_item_points"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        style="@style/MissionTaskPoints"

        android:layout_marginStart="115dp"

        app:layout_constraintStart_toStartOf="@id/mission_selected_item_background"
        app:layout_constraintTop_toBottomOf="@id/mission_selected_item_title"

        tools:text="500 points"
        />

    <ProgressBar
        android:id="@+id/mission_selected_item_progress"
        android:layout_width="0dp"
        android:layout_height="32dp"

        style="?android:attr/progressBarStyleHorizontal"

        android:layout_marginHorizontal="50dp"

        app:layout_constraintStart_toEndOf="@id/mission_selected_item_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        tools:progress="50"

        android:progressDrawable="@drawable/green_progress_drawable"
        />

</androidx.constraintlayout.widget.ConstraintLayout>