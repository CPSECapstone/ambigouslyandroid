<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/task_question_free_response_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:text="The prompt goes here."
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/fr_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        tools:text="0/4 points"
        android:paddingLeft="120dp"
        android:gravity="right"
        android:textAlignment="gravity"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:visibility="gone"
        />

    </LinearLayout>


    <TextView
        android:id="@+id/task_question_free_response_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:text="Your Answer:"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/task_question_free_response_answer"
        android:layout_width="600dp"
        android:layout_height="200dp"/>

</LinearLayout>