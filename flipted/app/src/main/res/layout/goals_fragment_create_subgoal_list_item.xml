<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/grayGoal"
    android:layout_width="330dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp">

    <View
        android:layout_width="330dp"
        android:layout_height="2dp"
        android:background="@color/grayDivider"
        />

    <LinearLayout
        android:layout_width="325dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/edit_vector" />

        <EditText
            style="@style/GoalDateAddTitleStyle"
            android:id="@+id/goals_fragment_create_subgoal_list_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/add_subgoal_title" />


    </LinearLayout>

    <View
        android:layout_width="330dp"
        android:layout_height="2dp"
        android:background="@color/grayDivider"
        />

    <LinearLayout
        android:layout_width="325dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/calendar_vector" />


        <Button
            style="@style/GoalDateButtonStyle"
            android:id="@+id/goals_fragment_create_subgoal_list_item_date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_subgoal_due_date" />

        <TextView
            style="@style/GoalDateTextStyle"
            android:id="@+id/goals_fragment_create_subgoal_list_item_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />



    </LinearLayout>


    <View
        android:layout_width="330dp"
        android:layout_height="2dp"
        android:background="@color/grayDivider"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:layout_gravity="end">

        <ImageButton
            android:id="@+id/goals_fragment_create_subgoal_list_item_delete_button"
            android:layout_width="0dp"
            android:background="#00000000"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/trash_vector" />


    </LinearLayout>


</LinearLayout>