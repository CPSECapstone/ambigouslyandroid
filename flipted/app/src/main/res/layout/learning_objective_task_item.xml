<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/learning_objective_task_item_mastery_indicator"
        android:layout_width="14dp"
        android:layout_height="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:src="@drawable/mastery_indicator_small"

        android:layout_marginStart="60dp"

        tools:tint="@color/nearlyMastered"
        />

    <TextView
        android:id="@+id/learning_objective_task_item_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/learning_objective_task_item_mastery_indicator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginStart="10dp"

        style="@style/Heading2Style"

        tools:text="Learning Task 1.4.3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>