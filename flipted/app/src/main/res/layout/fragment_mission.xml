<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1"
    tools:context=".ui.missions.MissionFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="0.9">
    <!-- TODO: Update blank fragment layout -->
    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mission"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:layout_marginTop="40dp"
        android:textSize="36dp"/>

    <Button
        android:id="@+id/taskOneButton"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_corner"
        android:textAllCaps="false"
        android:text="Covalent Bonds Task"
        android:fontFamily="sans-serif-black"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:paddingHorizontal="20dp"/>

    <Button
        android:id="@+id/taskTwoButton"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_corner"
        android:textAllCaps="false"
        android:text="Hydrogen Bonds Task"
        android:fontFamily="sans-serif-black"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:paddingHorizontal="20dp"/>


</LinearLayout>

    <ProgressBar
        android:id="@+id/task_info_progressbar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="50dp"
        android:visibility="gone"
        android:indeterminateTint="@color/colorPrimaryDark"
        />

    <include
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        layout="@layout/mission_task_info" />



</LinearLayout>