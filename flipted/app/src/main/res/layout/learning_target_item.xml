<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/learning_target_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        style="@style/TitleStyle"


        tools:text="Learning Target #1 - Cell Division"
        />
    <TextView
        android:id="@+id/learning_target_item_col_title_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/learning_target_item_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/learning_target_item_col_title_2"

        app:layout_constraintHorizontal_weight="2"

        style="@style/ColumnTitleStyle"

        android:text="@string/learning_target_item_column_text_1"
        />
    <TextView
        android:id="@+id/learning_target_item_col_title_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/learning_target_item_title"
        app:layout_constraintStart_toEndOf="@id/learning_target_item_col_title_1"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_weight="4"

        style="@style/ColumnTitleStyle"

        android:text="@string/learning_target_item_column_text_2"
        />
    <View
        android:id="@+id/learning_target_item_row_divisor_1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/learning_target_item_col_title_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:background="@color/gray4"
        />

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/learning_target_item_row_divisor_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        tools:listitem="@layout/learning_objective_item"
        />

</androidx.constraintlayout.widget.ConstraintLayout>