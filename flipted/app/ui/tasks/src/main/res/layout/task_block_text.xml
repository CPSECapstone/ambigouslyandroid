<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:id="@+id/task_block_text_root"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools"
        android:gravity="center_horizontal">


    <TextView
        android:id="@+id/task_block_text_title"
        style="@style/TaskBlockTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Title of Text Block" />

    <TextView
        android:id="@+id/task_block_text"
        style="@style/TaskBlockTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:textSize="15sp"
        tools:text="text of the article goes here" />

</LinearLayout>