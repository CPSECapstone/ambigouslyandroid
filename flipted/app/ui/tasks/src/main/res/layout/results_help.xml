<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height= "wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height= "350dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/results_grey_box">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="40dp"
            android:layout_marginLeft="35dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:text="Ask Question:"/>

        <EditText
            android:id="@+id/results_help_input"
            android:layout_width="425dp"
            android:layout_height="150dp"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="-100dp"
            android:background="@drawable/help_edit_box"/>
        <ImageView
            android:id="@+id/resultsAttachFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="-45dp"
            android:elevation="2dp"
            android:minWidth="22dp"
            android:minHeight="22dp"
            android:src="@drawable/baseline_attach_file_black_24dp"
            />

        <Button
            android:id="@+id/results_help_btn"
            style="@style/ResultsContinueBtn"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_marginTop="205dp"
            android:layout_marginLeft="-60dp"
            android:textAllCaps="false"
            android:text="Send" />

    </LinearLayout>

</LinearLayout>